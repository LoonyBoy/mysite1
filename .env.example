# Server (scores API)
PORT=4000
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=space_invaders

# Frontend
# Point the client to the API base URL
VITE_SCORES_API=http://localhost:4000

# Lead submission (Telegram bot)
# Obtain bot token from @BotFather and your numeric chat/user ID (e.g. via @userinfobot)
# NEVER commit a real token. Replace the placeholders below in your private .env (not versioned).
TG_BOT_TOKEN=00000000:YOUR_TELEGRAM_BOT_TOKEN
TG_CHAT_ID=123456789
TELEGRAM_LEAD_ENABLED=true
LEAD_RATE_LIMIT_WINDOW_MS=60000
LEAD_RATE_LIMIT_MAX=5
